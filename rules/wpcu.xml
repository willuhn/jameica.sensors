<?xml version="1.0" encoding="ISO-8859-1"?>

<rules xmlns:wt="http://www.willuhn.de/schema/jameica-sensors-rule"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.willuhn.de/schema/jameica-sensors-rule http://www.willuhn.de/schema/jameica-sensors-rule-1.0.xsd ">


  <!-- Warmwasser zu kalt -->
  <rule>
    <sensor>waterkotte.ai1.wpcu.device.temp.water.real</sensor>
    <limit>30.0</limit>
    <operator>de.willuhn.jameica.sensors.notify.operator.SmallerThan</operator>
    <notifier>de.willuhn.jameica.sensors.notify.notifier.Mail</notifier>
    
    <params>
      <param name="smtp.username"   value="" />
      <param name="smtp.password"   value="" />
      <param name="smtp.host"       value="localhost" />
      <param name="mail.sender"     value="root@localhost" />
      <param name="mail.recipients" value="info@willuhn.de" />
    </params>
  </rule>

  <!-- Warmwasser zu heiss -->
  <rule>
    <sensor>waterkotte.ai1.wpcu.device.temp.water.real</sensor>
    <limit>50.0</limit>
    <operator>de.willuhn.jameica.sensors.notify.operator.GreaterThan</operator>
    <notifier>de.willuhn.jameica.sensors.notify.notifier.Mail</notifier>
    
    <params>
      <param name="smtp.username"   value="" />
      <param name="smtp.password"   value="" />
      <param name="smtp.host"       value="localhost" />
      <param name="mail.sender"     value="root@localhost" />
      <param name="mail.recipients" value="info@willuhn.de" />
    </params>
  </rule>
  

  <!-- Vorlauf zu kalt -->
  <rule>
    <sensor>waterkotte.ai1.wpcu.device.temp.heater.out.real</sensor>
    <limit>22.0</limit>
    <operator>de.willuhn.jameica.sensors.notify.operator.SmallerThan</operator>
    <notifier>de.willuhn.jameica.sensors.notify.notifier.Mail</notifier>
    
    <params>
      <param name="smtp.username"   value="" />
      <param name="smtp.password"   value="" />
      <param name="smtp.host"       value="localhost" />
      <param name="mail.sender"     value="root@localhost" />
      <param name="mail.recipients" value="info@willuhn.de" />
    </params>
  </rule>

  <!-- Ruecklauf zu kalt -->
  <rule>
    <sensor>waterkotte.ai1.wpcu.device.temp.heater.return.real</sensor>
    <limit>22.0</limit>
    <operator>de.willuhn.jameica.sensors.notify.operator.SmallerThan</operator>
    <notifier>de.willuhn.jameica.sensors.notify.notifier.Mail</notifier>
    
    <params>
      <param name="smtp.username"   value="" />
      <param name="smtp.password"   value="" />
      <param name="smtp.host"       value="localhost" />
      <param name="mail.sender"     value="root@localhost" />
      <param name="mail.recipients" value="info@willuhn.de" />
    </params>
  </rule>
  

  <!-- Waermequelle zu kalt -->
  <rule>
    <sensor>waterkotte.ai1.wpcu.device.temp.system.source.in</sensor>
    <limit>0.0</limit>
    <operator>de.willuhn.jameica.sensors.notify.operator.SmallerThan</operator>
    <notifier>de.willuhn.jameica.sensors.notify.notifier.Mail</notifier>
    
    <params>
      <param name="smtp.username"   value="" />
      <param name="smtp.password"   value="" />
      <param name="smtp.host"       value="localhost" />
      <param name="mail.sender"     value="root@localhost" />
      <param name="mail.recipients" value="info@willuhn.de" />
    </params>
  </rule>

</rules>
